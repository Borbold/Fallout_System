<Defaults>
	<Panel position='0 0 -12' rotation='0 0 180' />
	<VerticalScrollView rotation='0 0 180' />
	<TableLayout rotation='0 0 180' />
	<Row preferredHeight='75' />
	<Cell dontUseTableCellBackground='true' />
	<InputField class='inputType' resizeTextForBestFit='True'
		onEndEdit='SetInputTypeAmmunition' resizeTextMaxSize='60' font='Fonts/Hanzi' />
	<Text resizeTextForBestFit='True'
		resizeTextMaxSize='60' font='Fonts/Hanzi' />
	<Button class='bestFitB' resizeTextForBestFit='True'
		resizeTextMaxSize='60' font='Fonts/Hanzi' />
	<InputField class='inputValue' resizeTextForBestFit='True'
		onEndEdit='SetValueAmmunition' resizeTextMaxSize='60'/>
</Defaults>

<Panel visibility='Black'>
	<Button onClick='PanelTool' image='uiGear' height='50' width='50' offsetXY='160 160'/>
	<Button id='panelClose' onClick='Reset' image='uiClose' height='35' width='35' offsetXY='200 160' active='false'
		tooltip='Reset' tooltipFontSize='25'/>
	<VerticalScrollView id='panelTool' height='400' width='500'
		color='black' offsetXY='0 385' active='false' verticalScrollbarVisibility='AutoHideAndExpandViewport'>
		<TableLayout id='TLSet' height='400' cellSpacing='2'>
			<Row>
				<Cell>
					<InputField placeholder='Max' resizeTextForBestFit='true' characterValidation='Integer'
						resizeTextMaxSize='50' color='#ffffff' onEndEdit='SetInputMax'/>
				</Cell>
				<Cell>
					<Button text='Add new ammo type' resizeTextForBestFit='true'
						resizeTextMaxSize='50' color='#44944a' onClick='SetNewAmmunitionType'/>
				</Cell>
			</Row>
			<NewRowS />
		</TableLayout>
	</VerticalScrollView>
</Panel>

<Panel>
	<Button onClick='PanelTool2' image='uiBars' height='50' width='50' offsetXY='-160 160'/>
	<VerticalScrollView id='panelTool2' height='400' width='500'
		color='black' offsetXY='0 385' active='false' verticalScrollbarVisibility='AutoHideAndExpandViewport'>
		<TableLayout id='TLUse' height='400' cellSpacing='2' rowBackgroundColor='#ffffff'>
			<Row>
				<Cell columnSpan='4'>
					<Text text='Max value Am.'/>
				</Cell>
				<Cell columnSpan='4'>
					<Text id='maxText' text='1'/>
				</Cell>
			</Row>
			<NewRowC />
		</TableLayout>
	</VerticalScrollView>
</Panel>

<Panel>
	<Button id='buttonM' onClick='MinusValue' image='uiSight' height='50' width='50' offsetXY='0 -160' active='false'/>
</Panel>